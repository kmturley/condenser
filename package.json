{
  "name": "condenser",
  "version": "1.0.0",
  "type": "module",
  "description": "Turns Steam into liquid",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "app:browser": "tsx watch backend/browser.ts",
    "app:steam": "/Applications/Steam.app/Contents/MacOS/steam_osx -dev",
    "app:steam-gamepad": "/Applications/Steam.app/Contents/MacOS/steam_osx -dev -gamepadui",
    "apps": "concurrently \"npm run app:browser\" \"npm run app:steam\"",
    "dev": "npm run services",
    "service:frontend": "vite frontend",
    "service:server": "tsx watch backend/index.ts",
    "service:target": "tsx watch backend/target.ts",
    "services": "concurrently \"npm run service:frontend\" \"npm run service:server\" \"npm run service:target\"",
    "start": "tsx backend/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "puppeteer": "^24.26.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "condenser",
    "steam",
    "plugins"
  ],
  "author": "kmturley",
  "license": "MIT",
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ws": "^8.18.3"
  }
}
